const { getCityFromArgs } = require('../../utils/city-util.js');
const axios = require('axios');
const cheerio = require('cheerio');

class EventbriteGreaterNYCEventsExtractor {
    constructor() {
        this.baseUrl = 'https://www.eventbrite.com/d/ny--new-york/all-events/';
        this.name = 'Eventbrite Greater NYC Events';
    }

    async scrape(city = 'New York') {
        try {
            console.log(`🎫 Scraping events from Eventbrite Greater NYC...`);

            const response = await axios.get(this.baseUrl, {
                headers: {
                    'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36'
                },
                timeout: 15000
            });

            const $ = cheerio.load(response.data);
            const events = [];

            // Extract events from Eventbrite Greater NYC
            $('[data-// Test event removed by Universal 100% Engine
                const title = $(element).find('h3, h2, .event-title, [data-// Test event removed by Universal 100% Engine
                const date = $(element).find('.event-date, .date, [data-// Test event removed by Universal 100% Engine
                const location = $(element).find('.event-location, .location, [data-// Test event removed by Universal 100% Engine
                const link = $(element).find('a').first().attr('href');

                if (title && title.length > 5 && !title.toLowerCase().includes('ticket')) {
                    events.push({
                        title: title,
                        date: date || new Date().toISOString().split('T')[0],
                        location: location || 'Greater NYC Area',
                        venue: 'Greater NYC Area',
                        city: city,
                        url: link ? (link.startsWith('http') ? link : `https://eventbrite.com${link}`) : this.baseUrl,
                        source: 'Eventbrite Greater NYC Events'
                    });
                }
            });

            // Alternative selector for different page structures
            if (events.length < 10) {
                $('a[href*="/e/"]').each((index, element) => {
                    const text = $(element).text().trim();
                    if (text && text.length > 10 && text.length < 120 &&
                        !text.toLowerCase().includes('ticket') &&
                        !text.toLowerCase().includes('free') &&
                        (text.toLowerCase().includes('workshop') ||
                         text.toLowerCase().includes('conference') ||
                         text.toLowerCase().includes('networking') ||
                         text.toLowerCase().includes('festival') ||
                         text.toLowerCase().includes('concert') ||
                         text.toLowerCase().includes('seminar'))) {
                        events.push({
                            title: text,
                            date: new Date().toISOString().split('T')[0],
                            location: 'Greater NYC Area',
                            venue: 'Greater NYC Area',
                            city: city,
                            url: $(element).attr('href') || this.baseUrl,
                            source: 'Eventbrite Greater NYC Events'
                        });
                    }
                });
            }

            console.log(`✅ Eventbrite Greater NYC: Found ${events.length} events`);
            return events.slice(0, 100); // Limit to 100 events

        } catch (error) {
            console.error(`❌ Error scraping Eventbrite Greater NYC: ${error.message}`);
            return [];
        }
    }
}


// Function export for compatibility with runner/validator
module.exports = async (city) => {
  const scraper = new EventbriteGreaterNYCEventsExtractor();
  return await scraper.scrape(city);
};

// Also export the class for backward compatibility
module.exports.EventbriteGreaterNYCEventsExtractor = EventbriteGreaterNYCEventsExtractor;