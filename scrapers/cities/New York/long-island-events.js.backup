const { getCityFromArgs } = require('../../utils/city-util.js');
const axios = require('axios');
const cheerio = require('cheerio');

class LongIslandEventsExtractor {
    constructor() {
        this.baseUrl = 'https://www.meetup.com/find/?keywords=events&location=us--ny--long_island';
        this.name = 'Long Island Events';
    }

    async scrape() {
        try {
            console.log(`🏖️ Scraping events from Long Island...`);
            
            const response = await axios.get(this.baseUrl, {
                headers: {
                    'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36'
                },
                timeout: 10000
            });

            const $ = cheerio.load(response.data);
            const events = [];

            // Extract events from Long Island area
            $('div[data-testid="event-card"], .event-card, .eventCard').each((index, element) => {
                const title = $(element).find('h3, h2, .event-title, [data-testid="event-title"]').first().text().trim();
                const date = $(element).find('.event-date, .date, [data-testid="event-date"]').first().text().trim();
                const location = $(element).find('.event-location, .location, [data-testid="event-location"]').first().text().trim();
                const link = $(element).find('a').first().attr('href');

                if (title && title.length > 3) {
                    events.push({
                        title: title,
                        date: date || new Date().toISOString().split('T')[0],
                        location: location || 'Long Island, NY',
                        venue: 'Long Island Area',
                        city: 'Long Island',
                        url: link ? (link.startsWith('http') ? link : `https://meetup.com${link}`) : this.baseUrl,
                        source: 'Long Island Events'
                    });
                }
            });

            // Alternative selector for different page structures
            if (events.length === 0) {
                $('a').each((index, element) => {
                    const text = $(element).text().trim();
                    if (text && text.length > 10 && text.length < 100 && 
                        (text.toLowerCase().includes('event') || 
                         text.toLowerCase().includes('festival') ||
                         text.toLowerCase().includes('concert') ||
                         text.toLowerCase().includes('show'))) {
                        events.push({
                            title: text,
                            date: new Date().toISOString().split('T')[0],
                            location: 'Long Island, NY',
                            venue: 'Long Island Area',
                            city: 'Long Island',
                            url: this.baseUrl,
                            source: 'Long Island Events'
                        });
                    }
                });
            }

            console.log(`✅ Long Island: Found ${events.length} events`);
            return events.slice(0, 50); // Limit to 50 events

        } catch (error) {
            console.error(`❌ Error scraping Long Island: ${error.message}`);
            return [];
        }
    }
}

module.exports = LongIslandEventsExtractor;
