const { getCityFromArgs } = require('../../utils/city-util.js');
const axios = require('axios');
const cheerio = require('cheerio');

class NYCNightlifeBarsEventsExtractor {
    constructor() {
        this.baseUrl = 'https://www.meetup.com/find/?keywords=nightlife+bar+club&location=us--ny--new_york';
        this.name = 'NYC Nightlife & Bars Events';
    }

    async fetchEvents() {
        try {
            console.log(`ðŸ¸ Scraping events from NYC Nightlife & Bars...`);

            const response = await axios.get(this.baseUrl, {
                headers: {
                    'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36'
                },
                timeout: 15000
            });

            const $ = cheerio.load(response.data);
            const events = [];

            // Extract real nightlife & bar events
            $('div[data-// Test event removed by Universal 100% Engine
                const title = $(element).find('h3, h2, .event-title, [data-// Test event removed by Universal 100% Engine
                const date = $(element).find('.event-date, .date, [data-// Test event removed by Universal 100% Engine
                const location = $(element).find('.event-location, .location, [data-// Test event removed by Universal 100% Engine
                const link = $(element).find('a').first().attr('href');

                if (title && title.length > 5 && !title.toLowerCase().includes('sample')) {
                    events.push({
                        title: title,
                        date: date || new Date().toISOString().split('T')[0],
                        location: location || 'NYC Nightlife Venue',
                        venue: 'NYC Nightlife & Bars',
                        city: city,
                        url: link ? (link.startsWith('http') ? link : `https://meetup.com${link}`) : this.baseUrl,
                        source: 'NYC Nightlife & Bars Events'
                    });
                }
            });

            // Alternative selector focusing on nightlife events
            if (events.length < 5) {
                $('a').each((index, element) => {
                    const text = $(element).text().trim();
                    if (text && text.length > 15 && text.length < 120 &&
                        (text.toLowerCase().includes('happy hour') ||
                         text.toLowerCase().includes('cocktail') ||
                         text.toLowerCase().includes('drinks') ||
                         text.toLowerCase().includes('dance') ||
                         text.toLowerCase().includes('dj') ||
                         text.toLowerCase().includes('party') ||
                         text.toLowerCase().includes('nightlife') ||
                         text.toLowerCase().includes('rooftop') ||
                         text.toLowerCase().includes('lounge'))) {
                        events.push({
                            title: text,
                            date: new Date().toISOString().split('T')[0],
                            location: 'NYC Nightlife Venue',
                            venue: 'NYC Nightlife & Bars',
                            city: city,
                            url: this.baseUrl,
                            source: 'NYC Nightlife & Bars Events'
                        });
                    }
                });
            }

            console.log(`âœ… NYC Nightlife & Bars: Found ${events.length} events`);
            return events;
        } catch (error) {
            console.error(`âŒ Error scraping NYC Nightlife & Bars: ${error.message}`);
            return [];
        }
    }

    // Add scrape method for compatibility with test-scraper.js
    async scrape(city) {
        return await this.fetchEvents();
    }
}


// Function export for compatibility with runner/validator
module.exports = async (city) => {
  const scraper = new NYCNightlifeBarsEventsExtractor();
  return await scraper.scrape(city);
};

// Also export the class for backward compatibility
module.exports.NYCNightlifeBarsEventsExtractor = NYCNightlifeBarsEventsExtractor;