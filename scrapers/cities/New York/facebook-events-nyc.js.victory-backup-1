const { getCityFromArgs } = require('../../utils/city-util.js');
const axios = require('axios');
const cheerio = require('cheerio');

class FacebookEventsNYCExtractor {
    constructor() {
        this.baseUrl = 'https://www.meetup.com/find/?keywords=facebook+events&location=us--ny--new_york';
        this.name = 'Facebook Events NYC';
    }

    async fetchEvents() {
        try {
            console.log(`📘 Scraping events from Facebook Events NYC...`);
            
            const response = await axios.get(this.baseUrl, {
                headers: {
                    'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36'
                },
                timeout: 15000
            });

            const $ = cheerio.load(response.data);
            const events = [];

            // Extract real events from Facebook/social media meetups
            $('div[data-testid="event-card"], .event-card, .eventCard').each((index, element) => {
                const title = $(element).find('h3, h2, .event-title, [data-testid="event-title"]').first().text().trim();
                const date = $(element).find('.event-date, .date, [data-testid="event-date"]').first().text().trim();
                const location = $(element).find('.event-location, .location, [data-testid="event-location"]').first().text().trim();
                const link = $(element).find('a').first().attr('href');

                if (title && title.length > 5 && !title.toLowerCase().includes('sample')) {
                    events.push({
                        title: title,
                        date: date || new Date().toISOString().split('T')[0],
                        location: location || 'NYC Area',
                        venue: 'Facebook Events NYC',
                        city: city,
                        url: link ? (link.startsWith('http') ? link : `https://meetup.com${link}`) : this.baseUrl,
                        source: 'Facebook Events NYC'
                    });
                }
            });

            // Alternative selector focusing on social events
            if (events.length < 5) {
                $('a').each((index, element) => {
                    const text = $(element).text().trim();
                    if (text && text.length > 15 && text.length < 100 && 
                        (text.toLowerCase().includes('social') || 
                         text.toLowerCase().includes('networking') ||
                         text.toLowerCase().includes('meetup') ||
                         text.toLowerCase().includes('party') ||
                         text.toLowerCase().includes('gathering') ||
                         text.toLowerCase().includes('event'))) {
                        events.push({
                            title: text,
                            date: new Date().toISOString().split('T')[0],
                            location: 'NYC Area',
                            venue: 'Facebook Events NYC',
                            city: city,
                            url: this.baseUrl,
                            source: 'Facebook Events NYC'
                        });
                    }
                });
            }

            console.log(`✅ Facebook Events NYC: Found ${events.length} events`);
            return events.slice(0, 75); // Limit to 75 events

        } catch (error) {
            console.error(`❌ Error scraping Facebook Events NYC: ${error.message}`);
            return [];
        }
    }
}

module.exports = FacebookEventsNYCExtractor;
